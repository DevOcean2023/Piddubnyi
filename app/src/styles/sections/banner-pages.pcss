@import "../variables-and-mixins.pcss";

.banner-pages {
	margin: 37px 0 60px;
	padding: 65px 0;
	position: relative;

	@media (--sm) {
		padding: 113px 0;
	}

	.inner {
		width: 100%;
		max-width: 100%;
		padding: 16px;
		background-color: #fff;

		@media (--sm) {
			min-width: 403px;
			max-width: max-content;
			padding: 16px 22px;
		}
	}

	&__title {
		font-family: $font-family-raleway;
		font-size: 32px;
		font-weight: 600;
		line-height: 42px;
		color: #171a19;
		text-align: center;
		text-transform: uppercase;
	}
}
