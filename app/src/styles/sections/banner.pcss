@import "../variables-and-mixins.pcss";

.banner {
	position: relative;
	background-color: $color-colors-element;
	text-align: center;
	padding-top: 60px;
	padding-bottom: 70px;

	@media (--lg) {
		padding-top: 100px;
		padding-bottom: 110px;
	}

	&__title {
		@include text-style-text-headline-1;

		margin-bottom: 20px;
	}

	&__sub-title {
		margin-bottom: 40px;
	}
}
