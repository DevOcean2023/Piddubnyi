@import "../../../../../src/styles/variables-and-mixins.pcss";

.inner {
	margin: 0 auto;
	padding: 0 16px;
	width: 100%;
	max-width: 1440px;

	@media (--lg) {
		padding: 0 80px;
	}
}

.screen-reader-text {
	@include screen-reader-text;
}

.object-fit {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	object-position: center top;

	& ~ * {
		position: relative;
	}

	&-cover {
		object-fit: cover;
		height: 100%;
	}

	&-contain {
		object-fit: contain;
		height: auto;
	}
}
